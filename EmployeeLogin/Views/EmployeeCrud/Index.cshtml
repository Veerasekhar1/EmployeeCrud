@model IEnumerable<EmployeeLogin.Models.EmployeeModelCrud>

<a asp-controller="EmployeeCrud" asp-action="Create">Create</a>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Address</th>
            <th>Hobbies</th>
            <th>Gender</th>
            <th>Country</th>
            <!-- Add other table headers for City, Address, Hobbies, Gender, Country -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {

            foreach (var employee in Model)
            {
                <tr>
                    <td>@(employee.Id != null ? employee.Id.ToString() : "")</td>
                    <td>@(employee.Name ?? "")</td> 
                    <td>@(employee.City ?? "")</td>
                    <td>@(employee.Address ?? "")</td>
                    <td>@(employee.Hobbies ?? "")</td>
                    <td>@(employee.Gender ?? "")</td>
                    <td>@(employee.Country ?? "")</td>
                    <!-- Add other table cells for City, Address, Hobbies, Gender, Country -->
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id" asp-controller="EmployeeCrud">Details</a> |
                        <a asp-action="Edit" asp-route-id="@employee.Id" asp-controller="EmployeeCrud">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@employee.Id" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No data available.</p>
        }
    </tbody>
</table>
<span>@ViewBag.message</span>