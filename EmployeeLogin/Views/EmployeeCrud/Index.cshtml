@model IEnumerable<EmployeeLogin.Models.EmployeeModelCrud>

<a asp-controller="EmployeeCrud" asp-action="Create">Create</a>

<h2 style="color:darkgoldenrod ;">Employee List</h2>
    <!DOCTYPE html>
    <html>

    <head>
        <style>
            table {
                width: 100%;
                border: 2px solid pink; /* Set border width and color */
                border-collapse: collapse; /* Collapse borders to avoid spacing issues */
            }

            th, td {
                border: 1px solid pink; /* Set border width and color for table cells */
                padding: 8px; /* Add some padding for better appearance */
                text-align: center; /* Center align content in cells */
            }

                th#id-header {
                    color: blue; /* Set the color for the ID header */
                }

                th#name-header {
                    color: green; /* Set the color for the Name header */
                }

                th#city-header {
                    color: red; /* Set the color for the City header */
                }

                th#address-header {
                    color: orange; /* Set the color for the Address header */
                }

                th#hobbies-header {
                    color: purple; /* Set the color for the Hobbies header */
                }

                th#gender-header {
                    color: brown; /* Set the color for the Gender header */
                }

                th#country-header {
                    color: teal; /* Set the color for the Country header */
                }


            .id-cell {
                color: blue; /* Set the color for the ID cell */
            }

            .name-cell {
                color: green; /* Set the color for the Name cell */
            }

            .city-cell {
                color: red; /* Set the color for the City cell */
            }

            .address-cell {
                color: orange; /* Set the color for the Address cell */
            }

            .hobbies-cell {
                color: purple; /* Set the color for the Hobbies cell */
            }

            .gender-cell {
                color: brown; /* Set the color for the Gender cell */
            }

            .country-cell {
                color: teal; /* Set the color for the Country cell */
            }

        </style>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

        @functions {
            public string GetGenderDisplayName(Gender gender)
            {
                switch (gender)
                {
                    case Gender.Male:
                        return "Male";
                    case Gender.Female:
                        return "Female";
                    // case Gender.Other:
                    //     return "Other";
                    default:
                        return "";
                }
            }
        }

    </head>
    <body>
<table width="100%" height="100%" cellpadding="1" cellspacing="1"
       border="1" align="center" border-color="pink">
    <thead>
        <tr class="rcptFont">
                    <th id="id-header">ID</th>
                    <th id="name-header">Name</th>
                    <th id="city-header">City</th>
                    <th id="address-header">Address</th>
                    <th id="hobbies-header">Hobbies</th>
                    <th id="gender-header">Gender</th>
                    <th id="country-header">Country</th>
            <!-- Add other table headers for City, Address, Hobbies, Gender, Country -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {

            foreach (var employee in Model)
            {
                <tr>
                            <td class="id-cell">@(employee.Id != null ? employee.Id.ToString() : "")</td>
                            <td class="name-cell">@(employee.Name ?? "")</td>
                            <td class="city-cell">@(employee.City ?? "")</td>
                            <td class="address-cell">@(employee.Address ?? "")</td>
                            <td class="hobbies-cell">@(employee.Hobbies ?? "")</td>
@*                             <td class="gender-cell">@(employee.Gender ?? "")</td> *@
                            <td class="gender-cell">@(employee.Gender != null ? employee.Gender.ToString() : "")</td>
                            <td class="country-cell">@(employee.Country ?? "")</td>
                    <!-- Add other table cells for City, Address, Hobbies, Gender, Country -->
                    <td>
                                <a asp-action="Details" asp-route-id="@employee.Id" asp-controller="EmployeeCrud"> <i class="fas fa-info-circle"></i></a> |
                                <a asp-action="Edit" asp-route-id="@employee.Id" asp-controller="EmployeeCrud"> <i class="fas fa-edit"></i></a> |
                                <a asp-action="Delete" asp-route-id="@employee.Id" onclick="return confirm('Are you sure you want to delete this record?');"> <i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No data available.</p>
        }
    </tbody>
</table>
<span>@ViewBag.message</span>
    </body>
</html>