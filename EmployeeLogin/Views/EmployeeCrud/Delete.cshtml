@model EmployeeModelCrud

<h2>Delete Employee</h2>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <p>Are you sure you want to delete this employee?</p>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />

        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" readonly />

        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" readonly />

        <label asp-for="Hobbies"></label>
        <input asp-for="Hobbies" class="form-control" readonly />

        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" readonly />

        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" readonly />
    </div>

    <!-- Add other readonly input fields for City, Address, Hobbies, Gender, Country -->

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index">Back to List</a>
</form>